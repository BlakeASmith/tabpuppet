{
  "manifest_version": 2,
  "name": "Click-Sync",
  "version": "1.0",

  "description": "syncronize clicks across browser instances",

  "browser_specific_settings":{
	  "gecko":{
		  "id": "clicksync@blakesmith.ca"
	  }
  },


  "background":{
	  "page":"background.html"
  },
  "permissions":[
	  "<all_urls>",
	  "webRequest",
	  "storage",
	  "tabs",
	  "webNavigation"
  ],
  "browser_action":{
	  "default_icon": "icon.png",
	  "default_popup": "popup/popup.html"
  }
}
